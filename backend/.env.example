# Database
DATABASE_URL=postgresql+asyncpg://talent:talent_dev@localhost:5432/talent_inbound

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET_KEY=change-me-generate-with-openssl-rand-hex-32
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM Providers (configure at least one)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# LLM Model configuration
# Provider: "anthropic" or "openai"
LLM_PROVIDER=anthropic
#LLM_PROVIDER=openai

# Anthropic models
LLM_FAST_MODEL=claude-haiku-4-5-20251001
# LLM_FAST_MODEL=gpt-4o-mini
LLM_SMART_MODEL=claude-sonnet-4-5-20250929
# LLM_SMART_MODEL=gpt-4o

# LangSmith (optional, for production tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=talent-inbound-os

# Application
LOG_LEVEL=INFO
ENVIRONMENT=development
UPLOAD_DIR=./uploads

# Chat
CHAT_DAILY_LIMIT=50
EMBEDDING_MODEL=text-embedding-3-small

# Ingestion
MAX_MESSAGE_LENGTH=50000

# Scoring weights (Analyst agent â€” tune to adjust match scoring)
SCORING_BASE=50
SCORING_SKILLS_WEIGHT=30
SCORING_WORK_MODEL_MATCH=10
SCORING_WORK_MODEL_MISMATCH=-5
SCORING_SALARY_MEETS_MIN=10
SCORING_SALARY_BELOW_MIN=-10

# Scoring thresholds (classify score into Strong / Moderate / Weak)
SCORING_THRESHOLD_HIGH=70
SCORING_THRESHOLD_MEDIUM=40
